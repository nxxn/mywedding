<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

  <%= link_to "Back", admin_articles_path %>

  <!-- Blog Post -->

  <!-- Title -->
  <h1><%= @article.title %></h1>

  <hr>

  <!-- Date/Time -->
  <p><span class="glyphicon glyphicon-time"></span> Posted on <%= l @article.created_at, format: "%d %B %Y" %></p>

  <hr>

  <!-- Preview Image -->
  <img class="img-responsive" src="http://placehold.it/900x300" alt="">

  <hr>

  <!-- Post Content -->
  <p>
    <%= @article.text %>
  </p>

  <hr>

</div>
