<div class="col-lg-10 col-lg-offset-1 col-md-12 article_container">

  <%= link_to "Back", admin_articles_path %>

  <!-- Blog Post -->

  <!-- Title -->
  <h1><%= @article.title %></h1>

  <hr>

  <!-- Date/Time -->
  <p><span class="glyphicon glyphicon-time"></span> Posted on <%= l @article.created_at, format: "%d %B %Y" %></p>

  <hr>

  <!-- Preview Image -->
  <%= image_tag @article.main_image(:original), class: "img-responsive" %>

  <hr>

  <!-- Post Content -->
  <p>
    <%= @article.text %>
  </p>

  <hr>

</div>
