<section class="container-fluid">
  <div class="col-md-12">
    <%= link_to "Новый заказ", new_admin_work_path, class: "new_article_link btn btn-default" %>
    <div class="tallykit-shortcode-heading style-1 works_tallykit">
      <span class="tk_bottomLine"></span>
      <div class="clear"></div>
    </div>
  </div>
  <div class="col-lg-12">
    <% @works.each_slice(4) do |slice| -%>
      <div class="row admin_works_row">
        <% slice.each do |work| -%>
          <div class="col-md-3 wow fadeIn">
            <div class="post-preview">
                <p class="post-meta">
                  <%= l(work.created_at, :format => '%d %B %Y') %>
                </p>
                <%= image_tag work.work_image(:medium), class: "img-responsive" %>
                <h3>
                  <%= work.name %>
                </h3>
                <p>
                  <%= work.comments %>
                </p>
              <% if work.active? %>
                <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                <%= work.order_number %>
              <% else %>
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
              <% end %>
              <%= link_to "Редактировать", edit_admin_work_path(work), class: "admin_work_edit" %>
              |
              <%= link_to "Удалить", admin_work_path(work), :confirm => 'Уверена ли ты?', :method => :delete, class: "admin_work_delete" %>
            </div>
          </div>
        <% end -%>
      </div>
      <hr>
    <% end -%>
  </div>
</section>
