<!-- Our works -->
<section class="triangle">
  <div class="row">
    <div class="col-sm-12 text-center wow to_animate pullDown">

      <div class="col-md-12">
        <div class="tallykit-shortcode-heading style-1 works_tallykit">
          <span class="tk_bottomLine"></span>
          <div class="clear"></div>
        </div>
      </div>

      <p class="small_heading"><%= t('works_text').html_safe %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="col-sm-12">
        <div id="isotope_container" class="isotope row to_animate stretchRight">

          <% @works.each do |work| %>

            <div class="isotope-item gallery-item col-md-4 col-sm-6 brand">
              <div class="gallery-image portfolio-content">
                <%= link_to image_tag(work.work_image(:medium), class: "img-responsive"), "/#{work.url}" %>
              </div>
            </div>

          <% end %>

        </div>
      </div>
    </div>
  </div>
</section>
