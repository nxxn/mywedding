<!DOCTYPE html>
<html>
<head>
  <title>Mywedding</title>
  <meta name=viewport content="width=device-width, initial-scale=1">

  <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
  <link href='http://fonts.googleapis.com/css?family=Great+Vibes' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900' rel='stylesheet' type='text/css'>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <%= stylesheet_link_tag 'application', media: 'all' %>

  <%= favicon_link_tag %>

  <%= csrf_meta_tags %>
</head>

<body>
  <a href="#0" class="cd-top">Top</a>
  <a href="#1" class="cd-top-envelope">Contacts</a>
  <!-- Page Header -->
  <header class="intro-header">
    <div class="container overlay">
      <%= link_to root_url do %>
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
          <div class="site-heading">
            <h1>My Wedding</h1>
            <hr class="small">
            <span class="subheading"><%= t('header_text') %></span>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </header>

  <section id="navigation">
    <div class="container">
      <nav id="wow-menu" class="navbar navbar-default on">
        <div class="container">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <ul class="nav navbar-nav navbar-right locale_navbar_mobile">
              <li><%= link_to "LV", url_for(locale: :lv), class: "#{I18n.locale == :lv ? 'active' : ''}" %></li>
              <li><%= link_to "RU", url_for(locale: :ru), class: "#{I18n.locale == :ru ? 'active' : ''}" %></li>
              <li><%= link_to "EN", url_for(locale: :en), class: "#{I18n.locale == :en ? 'active' : ''}" %></li>
            </ul>
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <!-- Menu -->
          <div id="bs-example-navbar-collapse-1" class="collapse navbar-collapse">
            <ul id="menu-top" class="nav navbar-nav navbar-left">
              <li><%= link_to t('home').html_safe, root_path, class: "#{params[:controller] == 'home' ? 'active' : ''}" %></li>
              <li><%= link_to t('articles'), articles_path, class: "#{params[:controller] == 'articles' ? 'active' : ''}" %></li>
              <li><%= link_to t('works'), works_path, class: "#{params[:controller] == 'works' ? 'active' : ''}" %></li>
              <li><%= link_to t('prices'), articles_path, class: "#{params[:controller] == 'prices' ? 'active' : ''}" %></li>
              <li><%= link_to t('shop'), articles_path, class: "#{params[:controller] == 'shop' ? 'active' : ''}" %></li>
            </ul>

            <ul class="nav navbar-nav navbar-right locale_navbar">
              <li><%= link_to "LV", url_for(locale: :lv), class: "#{I18n.locale == :lv ? 'active' : ''}" %></li>
              <li><%= link_to "RU", url_for(locale: :ru), class: "#{I18n.locale == :ru ? 'active' : ''}" %></li>
              <li><%= link_to "EN", url_for(locale: :en), class: "#{I18n.locale == :en ? 'active' : ''}" %></li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
  </section>

  <%= yield %>

  <!-- Contact Us -->
  <section>
    <div class="container">
      <div id="section-contact" class="text-center">
        <div class="row">
          <div class="col-md-12">

            <p class="small_heading">
              <a href="mailto:info@mywedding.lv" class="contacts_email">info@mywedding.lv</a>
              <span><%= t('tel_whatsapp_viber') %> <a href="tel://+371 26659556" class="contacts_number">+371 26659556</a></span>
              <span class="write_us_through_form"><%= t('contacts_write_us') %></span>
            </p>

            <%= simple_form_for @message, url: new_contact_message_path, remote: true do |f| %>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="emailaddress"><%= t('email') %></label>
                  <%= f.input :email, label: false, :input_html => { class: "form-control", placeholder: t('email'), type: "email", name: "email" }  %>
                  <!-- <input type="email" class="form-control" id="emailaddress" placeholder="<%= t('email') %>"> -->
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="namearea"><%= t('name') %></label>
                  <%= f.input :name, label: false, :input_html => { class: "form-control", placeholder: t('name'), name: "username" }  %>
                  <!-- <input type="text" class="form-control" id="namearea" placeholder="<%= t('name') %>"> -->
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="messagearea"><%= t('message') %></label>
              <%= f.input :message, label: false, :input_html => { class: "form-control", placeholder: t('message'), rows: 3, name: "message" }  %>
              <!-- <textarea class="form-control" placeholder="<%= t('message') %>" rows="3"></textarea> -->
            </div>

            <button type="submit" name="submitButton" class="btn custom-btn btn-default"><%= t('send') %></button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->

  <hr>

  <section>
    <div class="container">
      <footer>
        <div class="row">
          <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <ul class="list-inline text-center socials_list">
              <li>
                <a href="">
                  <span class="fa-stack fa-lg">
                    <i class="fa fa-instagram"></i>
                  </span>
                </a>
              </li>
              <li>
                <a href="">
                  <span class="fa-stack fa-lg">
                    <i class="fa fa-facebook"></i>
                  </span>
                </a>
              </li>
              <li>
                <a href="">
                  <span class="fa-stack fa-lg">
                    <i class="fa fa-pinterest"></i>
                  </span>
                </a>
              </li>
              <li>
                <a href="">
                  <span class="fa-stack fa-lg">
                    <i class="fa fa-vk"></i>
                  </span>
                </a>
              </li>
            </ul>
            <div class="footer_made_by">
              Разработка сайта: <a href="http://gnotov.com/ru/contacts">gnotov.<span>com</span></a>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </section>

  <!-- Modals start -->
  <div class="modal fade" id="call_me_back_modal" tabindex="-1" role="dialog" aria-labelledby="Login" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <span class="modal_close_button" data-dismiss="modal"></span>
          <!-- The form is placed inside the body of modal -->
          <div class="col-sm-12 row">
            <div class="col-xs-12 text-center">
              <div class="section-title center">
                <h2 class="text-center">Хотите мы вам перезвоним?</h2>
              </div>
            </div>
            <div class="col-sm-6 modal_form_container">
              <div class="col-xs-12 text-center small_title">
                Мы работаем ПН-ВС с 9.00 до 21.00 <br>
                Перезвоним Вам при первой возможности
              </div>

              <form id="loginForm" method="post" class="form-horizontal">
                <div class="form-group">
                  <label class="col-xs-10 col-xs-offset-1">Ваш номер*</label>
                  <div class="col-xs-10 col-xs-offset-1">
                    <input type="text" class="form-control modal_user_name_input" name="phone", placeholder="Пример: +7 926 123-45-67" />
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-xs-10 col-xs-offset-1">
                    <button type="submit" class="col-xs-12 btn btn-default">Оставить заявку</button>
                  </div>
                </div>
              </form>
              <div class="col-xs-12 text-center small_title">
                или позвоните нам по телефону <br> +7 (495) 669-14-20
              </div>
            </div>
            <div class="col-sm-6 modal_form_image_container">
              <!-- <%= image_tag ("woman_1.png"), class: "img-responsive" %> -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modals end -->


  <%= javascript_include_tag 'application' %>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

  <script>
  new WOW().init();
  </script>

